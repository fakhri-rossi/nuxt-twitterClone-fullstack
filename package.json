{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.22",
    "@iconify-json/ic": "^1.1.17",
    "@nuxt/ui": "^2.17.0",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@prisma/nuxt": "^0.0.30",
    "@tailwindcss/forms": "^0.5.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.3.0",
    "formidable": "^3.5.1",
    "human-time": "^0.0.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^3.1.2",
    "mitt": "^3.0.1",
    "nuxt": "^3.12.3",
    "url-pattern": "^1.0.3",
    "vue": "latest"
  },
  "devDependencies": {
    "@nuxtjs/device": "^3.1.1",
    "@prisma/client": "^5.17.0",
    "prisma": "^5.17.0"
  },
  "prisma:inline": "cp ./node_modules/.prisma/client/*.js ./node_modules/@prisma/client",
  "prisma:migrate": "prisma migrate deploy && npm run prisma:inline",
  "prisma:migrate:dev": "prisma migrate dev && npm run prisma:inline",
  "prisma:generate": "prisma generate && npm run prisma:inline",
  
  "build": "npx prisma db push && npx prisma generate && next build"
}
